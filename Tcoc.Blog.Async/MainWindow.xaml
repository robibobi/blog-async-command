<Window x:Class="Tcoc.Blog.Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tcoc.Blog.Async"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

            <Slider x:Name="PrimeCountSlider"
                    Width="140"
                    IsSnapToTickEnabled="True"
                    Maximum="1500000"
                    Minimum="1000"
                    TickFrequency="1"
                    Value="500000" />

            <TextBlock Margin="10,0,10,0" Text="{Binding StringFormat=Number of Primes: 0:, ElementName=PrimeCountSlider, Path=Value}" />

            <Button Width="120"
                    Command="{Binding CalculatePrimesCmd, Mode=OneWay}"
                    CommandParameter="{Binding ElementName=PrimeCountSlider, Path=Value}"
                    Content="Calculate Primes" />
        </StackPanel>

    </Grid>
</Window>
